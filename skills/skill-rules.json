{
  "version": "1.0",
  "description": "React Native skill triggers - executable skills only",
  "skills": {
    "frontend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "frontend-dev-guidelines.md",
      "promptTriggers": {
        "keywords": ["mobile", "react native", "screen", "navigation", "expo", "nativewind", "app", "ios", "android", "component", "ui", "form", "modal", "hook", "state", "redux"],
        "intentPatterns": [
          "(create|implement|build|add|update|fix).*?(screen|navigation|mobile|app|component|hook|context)",
          "(style|design|layout).*?(mobile|app|screen)",
          "(native|platform).*?(feature|module|component)",
          "(fetch|api|http).*?(service|call|request)"
        ]
      }
    },
    "figma-to-react-native": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "figma-to-react-native.md",
      "promptTriggers": {
        "keywords": ["figma", "convert figma", "figma to react native", "implement design", "design to mobile"],
        "intentPatterns": [
          "(convert|implement).*?figma",
          "figma.*?(react native|mobile|component|implementation)"
        ]
      }
    },
    "html-to-react-native": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "html-to-react-native.md",
      "promptTriggers": {
        "keywords": ["convert html", "html to react native", "html to mobile", "migrate html", "html template"],
        "intentPatterns": [
          "(convert|migrate|transform).*?html.*?(react native|mobile|expo)",
          "html.*?(react native|mobile|app)",
          "(static|template).*?(mobile|react native)"
        ]
      }
    },
    "e2e-test-generator": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "e2e-test-generator.md",
      "promptTriggers": {
        "keywords": ["e2e test", "maestro", "detox", "end-to-end", "e2e", "generate test", "mobile test"],
        "intentPatterns": [
          "(create|generate|write|add).*?(e2e|maestro|detox|test)",
          "(test|testing).*?(screen|flow|user|mobile)"
        ]
      }
    },
    "e2e-page-objects": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "e2e-page-objects.md",
      "promptTriggers": {
        "keywords": ["page object", "screen object", "test abstraction", "e2e pattern"],
        "intentPatterns": [
          "(create|add).*?page.*?object",
          "screen.*?(abstraction|pattern|object)"
        ]
      }
    },
    "e2e-fixtures": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "e2e-fixtures.md",
      "promptTriggers": {
        "keywords": ["test fixture", "test data", "mock data", "seed data"],
        "intentPatterns": [
          "(create|add).*?(fixture|test data|mock)",
          "(test|e2e).*?(data|fixture)"
        ]
      }
    },
    "create-dev-pr": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "create-dev-pr.md",
      "promptTriggers": {
        "keywords": ["create pr", "pull request", "dev pr", "ready for pr"],
        "intentPatterns": [
          "(create|open|make).*?(pr|pull.*?request)",
          "(fix|feature|bug).*?(completed|done|ready)"
        ]
      }
    },
    "fix-bug": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "fix-bug.md",
      "promptTriggers": {
        "keywords": ["fix bug", "debug", "troubleshoot", "error", "issue", "crash"],
        "intentPatterns": [
          "(fix|debug|troubleshoot).*?(bug|error|issue|crash)",
          "(not.*?working|broken|failing|crashing)"
        ]
      }
    },
    "organize-types": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "organize-types.md",
      "promptTriggers": {
        "keywords": ["organize types", "type organization", "typescript types", "type structure"],
        "intentPatterns": [
          "(organize|structure|refactor).*?types?",
          "types?.*?(organization|structure)"
        ]
      }
    }
  },
  "guides": {
    "_note": "These are reference documents in ../guides/, not executable skills",
    "component-patterns": "../guides/component-patterns.md",
    "styling-guide": "../guides/styling-guide.md",
