    "navigation-guide": "../guides/navigation-guide.md",
    "tanstack-query": "../guides/tanstack-query.md",
    "common-patterns": "../guides/common-patterns.md",
    "api-integration": "../guides/api-integration.md",
    "loading-and-error-states": "../guides/loading-and-error-states.md",
    "performance": "../guides/performance.md",
    "file-organization": "../guides/file-organization.md",
    "typescript-standards": "../guides/typescript-standards.md",
    "mobile-testing": "../guides/mobile-testing.md"
  },
  "docs": {
    "_note": "Documentation files in ../docs/",
    "authentication": "../docs/AUTHENTICATION.md",
    "best-practices": "../docs/BEST_PRACTICES.md"
  }
}
